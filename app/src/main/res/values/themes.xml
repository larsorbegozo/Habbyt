<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Habbyt" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_700</item>
        <item name="colorPrimaryVariant">@color/red_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/red_700</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/black</item>

        <!--<item name="toolbarStyle">@style/Widget.App.Toolbar</item>-->
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="navigationIconTint">@color/orange_200</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/red_700</item>
        <item name="colorPrimaryVariant">@color/red_A700</item>
        <item name="colorOnPrimary">@color/orange_200</item>
    </style>

    <style name="Checkbox">
        <item name="buttonTint">@color/red_700</item>
    </style>

    <style name="habitIcon">
        <item name="android:tint">#000000</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textColorPrimary">#000000</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">#000000</item>
        <!-- Icon Color -->
        <item name="android:tint">#000000</item>
    </style>
</resources>