<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Habbyt" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_700</item>
        <item name="colorPrimaryVariant">@color/red_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/red_700</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/black</item>

        <!--<item name="toolbarStyle">@style/Widget.App.Toolbar</item>-->
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="navigationIconTint">@color/orange_200</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/red_700</item>
        <item name="colorPrimaryVariant">@color/red_A700</item>
        <item name="colorOnPrimary">@color/orange_200</item>
    </style>

    <style name="Checkbox">
        <item name="buttonTint">@color/red_700</item>
    </style>

    <style name="CardView.custom" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">#C8C8C8</item>
        <item name="android:elevation">3dp</item>
        <item name="cardCornerRadius">100dp</item>
    </style>

    <style name="habitIconStyle">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="icon">
        <item name="tint">#121212</item>
    </style>

    <style name="background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.Icon.Custom" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/color_states_materialbutton</item>
        <item name="iconTint">@color/color_states_materialbutton</item>
        <item name="strokeColor">@color/color_states_materialbutton</item>
        <item name="backgroundTint">@color/color_states_materialbutton_background</item>
    </style>
</resources>