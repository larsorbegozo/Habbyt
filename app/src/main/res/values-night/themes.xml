<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Habbyt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_300</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/red_700</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="navigationIconTint">@color/orange_200</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/red_700</item>
        <item name="colorPrimaryVariant">@color/red_A700</item>
        <item name="colorOnPrimary">@color/orange_200</item>
    </style>

    <style name="Checkbox">
        <item name="buttonTint">@color/orange_200</item>
    </style>


    <style name="CardView.custom" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">#424242</item>
        <item name="android:elevation">3dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

    <style name="habitIconStyle">
        <item name="tint">@color/black</item>
    </style>
</resources>